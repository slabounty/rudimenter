#!/usr/bin/env ruby
require "bundler/setup"
require "rudimenter"

rudiment = Rudimenter::Rudiments::RudimentZero.new
score = rudiment.generate

renderer = Rudimenter::Renderers::MusicxmlRenderer.new(score)
File.write("tmp/rudiment_zero.musicxml", renderer.render)

puts "Generated rudiment_zero.xml"
